<!-- Centered Column Component -->
<!-- A flex column container that centers its children both vertically and horizontally. -->
<!-- Replaces common pattern: flex_flow="column" style_flex_main_place="center" -->
<!--                          style_flex_cross_place="center" style_flex_track_place="center" -->
<component>
  <api>
    <prop name="pad_gap" type="string" default="#space_md"/>
  </api>
  <view extends="lv_obj"
        width="100%" height="100%" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center"
        style_flex_track_place="center" style_pad_gap="$pad_gap" scrollable="false"/>
</component>
