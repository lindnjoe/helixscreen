<!-- AMS Tool Mapping Overlay Panel -->
<!-- Sub-panel for configuring tool-to-slot mappings -->
<component>
  <view name="ams_settings_tool_mapping"
        extends="overlay_panel" width="#overlay_panel_width_full" title="Tool Mapping" bg_color="#app_bg_color">
    <!-- Content Area (scrollable) -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_bg_opa="0" style_pad_all="#space_md" scrollable="true" scroll_dir="ver"
            style_border_width="0" flex_flow="column" style_pad_gap="#space_sm">
      <!-- Description text -->
      <text_small name="description"
                  width="100%" text="Configure which slot each tool uses for filament."
                  style_text_color="#text_secondary"/>
      <!-- Container for dynamic tool mapping rows (populated by C++) -->
      <lv_obj name="tool_rows_container"
              width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0"
              style_pad_gap="#space_sm" flex_flow="column" scrollable="false"/>
      <!-- Not supported message (shown when tool mapping not supported) -->
      <ui_card name="not_supported_card"
               width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_lg" flex_flow="column"
               style_flex_cross_place="center" style_pad_gap="#space_sm" hidden="true">
        <icon src="info" size="lg" variant="secondary"/>
        <text_body name="not_supported_text"
                   width="100%" text="Tool mapping is not supported by this backend." style_text_color="#text_secondary"
                   style_text_align="center"/>
      </ui_card>
    </lv_obj>
  </view>
</component>
