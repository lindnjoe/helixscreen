<!-- Reusable Settings Section Header Component -->
<!-- Creates a section divider with title for settings panel groups -->
<!-- Usage: <setting_section_header title="APPEARANCE"/> -->
<component>
  <api>
    <prop type="string" name="title" default="Section"/>
  </api>
  <view extends="lv_obj" width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="16" style_pad_bottom="4" scrollable="false">
    <lv_label text="$title" style_text_font="#font_small" style_text_color="#text_secondary" align="left_mid"/>
  </view>
</component>
