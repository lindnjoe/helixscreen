<!-- Modal for Klipper action:prompt dialogs -->
<!-- Buttons are created dynamically in C++ based on PromptData -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <!-- Dialog card (backdrop created programmatically) -->
  <view name="action_prompt_modal"
        extends="ui_dialog" width="320" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Header with title -->
    <lv_obj width="100%"
            height="content" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_lg"
            style_pad_bottom="#space_sm" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center"
            scrollable="false">
      <text_heading name="title" text="Action Required"/>
    </lv_obj>
    <!-- Horizontal divider below title -->
    <divider_horizontal/>
    <!-- Scrollable text content area -->
    <lv_obj name="content_container"
            width="100%" height="content" style_min_height="40" style_max_height="200" style_pad_left="#space_lg"
            style_pad_right="#space_lg" style_pad_top="#space_md" style_pad_bottom="#space_md" flex_flow="column"
            style_pad_gap="#space_xs" scrollable="true" scroll_snap_y="none">
      <!-- Text lines will be added dynamically -->
    </lv_obj>
    <!-- Regular button container (row_wrap for grouped buttons) -->
    <lv_obj name="button_container"
            width="100%" height="content" style_pad_left="#space_md" style_pad_right="#space_md"
            style_pad_top="#space_sm" style_pad_bottom="#space_sm" flex_flow="row_wrap" style_flex_main_place="center"
            style_flex_cross_place="center" style_pad_gap="#space_sm" scrollable="false">
      <!-- Buttons will be added dynamically based on PromptData.buttons -->
    </lv_obj>
    <!-- Horizontal divider above footer -->
    <divider_horizontal name="footer_divider" hidden="true"/>
    <!-- Footer button container -->
    <lv_obj name="footer_container"
            width="100%" height="content" style_pad_all="0" flex_flow="row" scrollable="false" hidden="true">
      <!-- Footer buttons will be added dynamically -->
    </lv_obj>
  </view>
</component>
