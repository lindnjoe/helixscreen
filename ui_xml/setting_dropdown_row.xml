<!-- Reusable Settings Dropdown Row Component -->
<!-- Creates a setting row with label and dropdown selector -->
<!-- Usage: <setting_dropdown_row label="Display Sleep"/> -->
<!-- Note: Dropdown options and selection handled in C++ -->
<component>
  <api>
    <prop type="string" name="label" default="Setting"/>
  </api>
  <view extends="lv_obj" name="dropdown_row" width="100%" height="content" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="8" style_pad_bottom="8" scrollable="false">
    <!-- Left side: Label -->
    <lv_label name="label" text="$label" style_text_font="#font_body"/>
    <!-- Right side: Dropdown -->
    <lv_dropdown name="dropdown" width="140" height="40" style_radius="#border_radius" style_border_width="0"/>
  </view>
</component>
