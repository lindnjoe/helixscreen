<!-- Reusable Settings Action Row Component -->
<!-- Creates a clickable row that opens a sub-panel or performs an action -->
<!-- Usage: <setting_action_row label="Network Settings" icon="mat_lan" description="WiFi and Ethernet"/> -->
<!-- Props:
     - label: Primary label text
     - icon: Optional left icon (e.g., "mat_wifi"). If empty, no icon shown.
     - description: Optional secondary description text below label
-->
<!-- Note: Parent C++ code attaches click handler to "action_row" by name -->
<!--
  Click Handling Strategy:
  All child containers have clickable="false" + event_bubble="true" so clicks pass through
  to the parent button. The floating overlay at the end catches any remaining clicks.
-->
<component>
  <api>
    <prop type="string" name="label" default="Action"/>
    <prop type="string" name="icon" default=""/>
    <prop type="string" name="description" default=""/>
  </api>
  <!-- Root button - receives all bubbled click events -->
  <view extends="lv_button" name="action_row" width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_shadow_width="0" style_radius="0" scrollable="false">
    <!-- Content container: clickable=false so clicks bubble to button -->
    <lv_obj width="100%" height="content" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#space_lg" style_pad_right="#space_lg" style_pad_top="#space_md" style_pad_bottom="#space_md" style_pad_gap="#space_sm" scrollable="false" clickable="false" event_bubble="true">
      <!-- Left side: Icon wrapped in pass-through container -->
      <lv_obj width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" clickable="false" event_bubble="true" scrollable="false">
        <icon name="row_icon" src="$icon" size="sm" variant="secondary"/>
      </lv_obj>
      <!-- Middle: Label and optional description in pass-through container -->
      <lv_obj width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xs" flex_grow="1" scrollable="false" clickable="false" event_bubble="true">
        <text_body name="label" text="$label" style_text_color="#text_primary"/>
        <text_small name="description" text="$description" style_text_color="#text_secondary"/>
      </lv_obj>
      <!-- Right side: Chevron wrapped in pass-through container -->
      <lv_obj width="content" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" clickable="false" event_bubble="true" scrollable="false">
        <icon src="chevron_right" size="sm" variant="secondary"/>
      </lv_obj>
    </lv_obj>
    <!-- Floating overlay: Catches clicks and bubbles to parent, covers full button -->
    <lv_obj width="100%" height="100%" align="top_left" style_bg_opa="0" style_border_width="0" style_pad_all="0" clickable="true" event_bubble="true" floating="true" scrollable="false"/>
  </view>
</component>
