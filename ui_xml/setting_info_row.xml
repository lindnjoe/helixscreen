<!-- Reusable Settings Info Row Component -->
<!-- Creates a read-only row showing a label and value -->
<!-- Usage: <setting_info_row label="Version" value="1.0.0"/> -->
<!-- For dynamic values, use bind_text on the value label in C++ -->
<component>
  <api>
    <prop type="string" name="label" default="Info"/>
    <prop type="string" name="value" default=""/>
  </api>
  <view extends="lv_obj" name="info_row" width="100%" height="content" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="8" style_pad_bottom="8" scrollable="false">
    <!-- Left side: Label -->
    <lv_label name="label" text="$label" style_text_font="#font_body"/>
    <!-- Right side: Value (secondary color) -->
    <lv_label name="value" text="$value" style_text_font="#font_body" style_text_color="#text_secondary"/>
  </view>
</component>
