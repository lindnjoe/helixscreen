<!-- Notification History Item Component
     Uses severity_card widget for automatic color styling.
     Pass severity="error|warning|success|info" and it handles colors.
     Call ui_severity_card_finalize() after creation to show correct icon. -->
<component>
  <api>
    <prop type="string" name="severity"/>
    <!-- "error", "warning", "info", "success" -->
    <prop type="string" name="title"/>
    <prop type="string" name="message"/>
    <prop type="string" name="timestamp"/>
  </api>
  <!-- Compact notification card with left color border (severity_card handles colors) -->
  <view extends="severity_card" name="notification_item" severity="$severity" width="100%" height="content" style_pad_left="#space_md" style_pad_right="#space_md" style_pad_top="#space_sm" style_pad_bottom="#space_sm" style_bg_color="#card_bg" style_bg_opa="255" style_border_width="4" style_border_side="left" style_radius="#border_radius" scrollable="false" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="start">
    <!-- Icon column (fixed width for icon) -->
    <lv_obj width="28" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_top="#space_xxs">
      <!-- Severity icons - all hidden by default, finalize() shows the correct one -->
      <lv_label name="icon_info" text="#icon_info_circle" hidden="true" style_text_font="mdi_icons_24" style_text_color="#info_color"/>
      <lv_label name="icon_success" text="#icon_check" hidden="true" style_text_font="mdi_icons_24" style_text_color="#success_color"/>
      <lv_label name="icon_warning" text="#icon_triangle_exclamation" hidden="true" style_text_font="mdi_icons_24" style_text_color="#warning_color"/>
      <lv_label name="icon_error" text="#icon_triangle_exclamation" hidden="true" style_text_font="mdi_icons_24" style_text_color="#error_color"/>
    </lv_obj>
    <!-- Content column (flex grow) -->
    <lv_obj flex_grow="1" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="column" style_pad_gap="#space_xxs">
      <!-- Title row with timestamp -->
      <lv_obj width="100%" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center">
        <text_body name="item_title" text="$title"/>
        <text_small name="item_timestamp" text="$timestamp" style_text_color="#text_secondary"/>
      </lv_obj>
      <!-- Message -->
      <text_small name="item_message" text="$message" width="100%" style_text_color="#text_secondary" long_mode="wrap"/>
    </lv_obj>
  </view>
</component>
