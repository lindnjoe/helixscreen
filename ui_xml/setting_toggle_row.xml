<!-- Reusable Settings Toggle Row Component -->
<!-- Creates a setting row with label and switch toggle -->
<!-- Usage: <setting_toggle_row label="Dark Mode" subject="settings_dark_mode"/> -->
<!-- Note: Switch automatically binds to subject for two-way updates -->
<component>
  <api>
    <prop type="string" name="label" default="Setting"/>
    <prop type="string" name="subject" default=""/>
    <prop type="string" name="description" default=""/>
  </api>
  <view extends="lv_obj" name="setting_row" width="100%" height="content" flex_flow="row" style_flex_main_place="space_between" style_flex_cross_place="center" style_bg_opa="0" style_border_width="0" style_pad_left="#padding_normal" style_pad_right="#padding_normal" style_pad_top="8" style_pad_bottom="8" scrollable="false">
    <!-- Left side: Label -->
    <lv_label name="label" text="$label" style_text_font="#font_body" flex_grow="1"/>
    <!-- Right side: Switch toggle -->
    <lv_switch name="toggle" width="50" height="28"/>
  </view>
</component>
